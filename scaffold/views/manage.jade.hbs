extends base

block title
  | Manage {{name}}s

block main
  h2 Manage {{name}}s

  if message != ''
    .alert
      button.close(data-dismiss="alert", href="#") &times;
      | #{message}

  table.table.table-striped
    tr
      {{#each fields}}{{#camelize}}th {{field}}{{/camelize}}{{/each}}
    each {{name}} in {{name}}s
      tr
        {{#each fields}}td= {{field}}{{/each}}
        td
          a(href='/{{name}}/#{ {{name}}.id }/edit') edit
          |  | 
          a(href='/articles/#{ {{name}}.id }/destroy', onclick='return confirm("Are you sure you want to delete this?") ? true : false') delete